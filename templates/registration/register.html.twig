{% extends 'base.html.twig' %}

{% block title %}Formulaire d'inscription{% endblock %}

{% block body %}
    <h1 class="mt-3">Formulaire d'inscription</h1>

    {{ form_start(registrationForm) }}
        <div class="mb-2">{{ form_row(registrationForm.username) }}</div>
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: 'C.G.U.'
        }) }}

        <button class="btn btn-lg btn-primary my-3" type="submit">S'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
