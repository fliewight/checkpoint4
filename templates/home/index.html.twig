{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <h1 class="mt-4">Bienvenue sur Boodiz, le site de blagues en ligne</h1>
    {% for joke in jokes %}
        <div class="card mt-4">
            <div class="card-body">
                <p class="card-text">#{{ joke.id }} - {{ joke.content|raw }}</p>
            </div>
        </div>
        {% if joke.user %}
            <div class="card border-0">
                <div class="card-body">
                    <p class="card-text">Auteur : {{ joke.user.username }}</p>
                </div>
            </div>
        {% endif %}
    {% endfor %}
{% endblock %}