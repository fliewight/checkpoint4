{% extends 'base.html.twig' %}

{% block title %}Administration - Gestion des catégories{% endblock %}

{% block body %}
    <h1 class="mt-3">Gestion des catégories</h1>
    <hr>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom de la catégorie</th>
                <th>Editer/Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <p class="my-4"><a class="bg-primary p-3 rounded my-auto text-decoration-none text-white letter-spacing" href="{{ path('category_new') }}">Créer une nouvelle catégorie</a></p>
{% endblock %}
