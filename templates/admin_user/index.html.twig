{% extends 'base.html.twig' %}

{% block title %}Administration - Gestion des utilisateurs{% endblock %}

{% block body %}
    <h1 class="mt-3">Gestion des utilisateurs</h1>
    <hr>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Pseudo</th>
                <th>Roles</th>
                <th>Mot de passe</th>
                <th>Editer/Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun utilisateur enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <p class="my-4"><a class="bg-primary p-3 rounded my-auto text-decoration-none text-white letter-spacing" href="{{ path('user_new') }}">Créer un nouvel utilisateur</a></p>
{% endblock %}
